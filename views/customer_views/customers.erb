<div class="pageContents">
  <h1>Customers</h1>
</div>

<div class="pageContents">

  <div>
    <a class="link" href="/customers/new">Create New Customer</a>
  </div>

  <% for customer in @customers %>
  <div class="stock customer">
    <p>Name: <a class="link" href="/customers/<%= customer.id %>"><%= customer.full_name() %></a></p>
    <p>Email: <%= customer.email %></p>
    <p>Tel: <%= customer.tel_number %></p>
  </div>

  <% end %>

</div>
